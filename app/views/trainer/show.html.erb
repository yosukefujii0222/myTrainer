<div class="trainer-page">
  <div class="container">

    <div class="trainer-description">
      <div class="trainer-description-left">
        <div class="image-wrapper">
          <p>ここに画像を表示。</p>
        </div>
      </div>
      <div class="trainer-description-right">
        <div class="status-wrapper">
          <div class="status name">
            <span>名前：</span><%= @trainer.name %>
          </div>
          <div class="status gender">
            <span>性別：</span><%= @trainer.gender %>
          </div>
          <div class="status height">
            <span>身長：</span><%= @trainer.height %>
          </div>
          <div class="status weight">
            <span>体重：</span><%= @trainer.weight %>
          </div>
          <div class="status age">
            <span>年齢：</span><%= @trainer.age %>
          </div>
          <div class="status career">
            <span>経歴：</span><%= @trainer.career %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
